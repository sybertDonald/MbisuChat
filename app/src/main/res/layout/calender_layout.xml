<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sy.infosys_ips.Calender.CalenderActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/here"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Add Your Plan"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:fontFamily="@font/font2"
        android:textSize="25dp"
        android:layout_below="@+id/here"
        android:id="@+id/plan1"
        android:background="@color/colorAccent"
        android:layout_margin="10dp"
        />



    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        android:layout_below="@+id/plan1"
        app:mcv_selectionColor="#00F"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="List Of My Plan(s)"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25dp"
        android:fontFamily="@font/font2"
        android:background="@color/colorAccent"
        android:layout_margin="10dp"
        android:id="@+id/planlist"
        android:layout_below="@+id/calendarView"
        />

</RelativeLayout>